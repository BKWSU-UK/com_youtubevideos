<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="batch">
        <field
            name="category_id"
            type="sql"
            label="COM_YOUTUBEVIDEOS_BATCH_CATEGORY_LABEL"
            description="COM_YOUTUBEVIDEOS_BATCH_CATEGORY_DESC"
            query="SELECT id AS value, title AS text FROM #__youtubevideos_categories WHERE published = 1 ORDER BY title"
            key_field="value"
            value_field="text"
            >
            <option value="">COM_YOUTUBEVIDEOS_BATCH_NOCHANGE</option>
            <option value="0">COM_YOUTUBEVIDEOS_BATCH_REMOVE_CATEGORY</option>
        </field>

        <field
            name="playlist_id"
            type="sql"
            label="COM_YOUTUBEVIDEOS_BATCH_PLAYLIST_LABEL"
            description="COM_YOUTUBEVIDEOS_BATCH_PLAYLIST_DESC"
            query="SELECT id AS value, title AS text FROM #__youtubevideos_playlists WHERE published = 1 ORDER BY title"
            key_field="value"
            value_field="text"
            >
            <option value="">COM_YOUTUBEVIDEOS_BATCH_NOCHANGE</option>
            <option value="0">COM_YOUTUBEVIDEOS_BATCH_REMOVE_PLAYLIST</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="JLIB_HTML_BATCH_ACCESS_LABEL"
            description="JLIB_HTML_BATCH_ACCESS_LABEL_DESC"
            >
            <option value="">COM_YOUTUBEVIDEOS_BATCH_NOCHANGE</option>
        </field>

        <field
            name="language_id"
            type="contentlanguage"
            label="JLIB_HTML_BATCH_LANGUAGE_LABEL"
            description="JLIB_HTML_BATCH_LANGUAGE_LABEL_DESC"
            >
            <option value="">COM_YOUTUBEVIDEOS_BATCH_NOCHANGE</option>
        </field>
    </fields>
</form>

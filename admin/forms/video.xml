<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="details"
        label="COM_YOUTUBEVIDEOS_FIELDSET_DETAILS"
        >
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />

        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            description="COM_YOUTUBEVIDEOS_FIELD_TITLE_DESC"
            class="input-xlarge"
            size="40"
            required="true"
            />

        <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
            size="40"
            />

        <field
            name="youtube_video_id"
            type="text"
            label="COM_YOUTUBEVIDEOS_FIELD_VIDEO_ID_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_VIDEO_ID_DESC"
            class="input-xlarge"
            size="40"
            required="true"
            />

        <field
            name="description"
            type="editor"
            label="JGLOBAL_DESCRIPTION"
            description="COM_YOUTUBEVIDEOS_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
            buttons="true"
            />

        <field
            name="custom_thumbnail"
            type="media"
            label="COM_YOUTUBEVIDEOS_FIELD_CUSTOM_THUMBNAIL_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_CUSTOM_THUMBNAIL_DESC"
            />

        <field
            name="category_id"
            type="sql"
            label="COM_YOUTUBEVIDEOS_CATEGORY"
            description="COM_YOUTUBEVIDEOS_FIELD_CATEGORY_DESC"
            query="SELECT id, title FROM #__youtubevideos_categories WHERE published = 1 ORDER BY title"
            key_field="id"
            value_field="title"
            >
            <option value="">JOPTION_SELECT_CATEGORY</option>
        </field>

        <field
            name="playlist_id"
            type="sql"
            label="COM_YOUTUBEVIDEOS_FIELD_PLAYLIST_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_PLAYLIST_DESC"
            query="SELECT id, title FROM #__youtubevideos_playlists WHERE published = 1 ORDER BY title"
            key_field="id"
            value_field="title"
            >
            <option value="">JOPTION_SELECT_PLAYLIST</option>
        </field>

        <field
            name="tags"
            type="textarea"
            label="COM_YOUTUBEVIDEOS_FIELD_TAGS_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_TAGS_DESC"
            rows="3"
            cols="40"
            hint="COM_YOUTUBEVIDEOS_FIELD_TAGS_HINT"
            />

        <field
            name="featured"
            type="list"
            label="COM_YOUTUBEVIDEOS_HEADING_FEATURED"
            description="COM_YOUTUBEVIDEOS_FIELD_FEATURED_DESC"
            class="custom-select"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="custom-select-color-state"
            size="1"
            default="1"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            size="1"
            />

        <field
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="JFIELD_LANGUAGE_DESC"
            >
            <option value="*">JALL</option>
        </field>

        <field
            name="ordering"
            type="number"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
            default="0"
            readonly="true"
            class="readonly"
            />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_CREATED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
            />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_CREATED_BY_DESC"
            readonly="true"
            />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_MODIFIED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
            />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_MODIFIED_BY_DESC"
            readonly="true"
            />
    </fieldset>

    <fieldset
        name="publishing"
        label="JGLOBAL_FIELDSET_PUBLISHING"
        >
        <field
            name="publish_up"
            type="calendar"
            label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
            size="22"
            filter="user_utc"
            />

        <field
            name="publish_down"
            type="calendar"
            label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
            size="22"
            filter="user_utc"
            />
    </fieldset>

    <fieldset
        name="params"
        label="JGLOBAL_FIELDSET_OPTIONS"
        >
        <field
            name="params"
            type="subform"
            label="COM_YOUTUBEVIDEOS_FIELD_PARAMS_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_PARAMS_DESC"
            multiple="false"
            />
    </fieldset>
</form>

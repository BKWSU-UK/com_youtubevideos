<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="details"
        label="COM_YOUTUBEVIDEOS_FIELDSET_DETAILS"
        >
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />

        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            description="COM_YOUTUBEVIDEOS_FIELD_TITLE_DESC"
            class="input-xlarge"
            size="40"
            required="true"
            />

        <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
            size="40"
            />

        <field
            name="youtube_tag"
            type="text"
            label="COM_YOUTUBEVIDEOS_FIELD_YOUTUBE_TAG_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_YOUTUBE_TAG_DESC"
            class="input-xlarge"
            size="40"
            required="true"
            />

        <field
            name="description"
            type="editor"
            label="JGLOBAL_DESCRIPTION"
            description="COM_YOUTUBEVIDEOS_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
            buttons="true"
            />

        <field
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="custom-select-color-state"
            size="1"
            default="1"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            size="1"
            />

        <field
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="JFIELD_LANGUAGE_DESC"
            >
            <option value="*">JALL</option>
        </field>

        <field
            name="ordering"
            type="number"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
            default="0"
            readonly="true"
            class="readonly"
            />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_CREATED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
            />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_CREATED_BY_DESC"
            readonly="true"
            />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_MODIFIED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
            />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="COM_YOUTUBEVIDEOS_FIELD_MODIFIED_BY_DESC"
            readonly="true"
            />

        <field
            name="hits"
            type="number"
            label="JGLOBAL_HITS"
            description="COM_YOUTUBEVIDEOS_FIELD_HITS_DESC"
            size="6"
            readonly="true"
            filter="unset"
            />
    </fieldset>

    <fieldset
        name="publishing"
        label="JGLOBAL_FIELDSET_PUBLISHING"
        >
    </fieldset>

    <fieldset
        name="metadata"
        label="JGLOBAL_FIELDSET_METADATA_OPTIONS"
        >
        <field
            name="metakey"
            type="textarea"
            label="JFIELD_META_KEYWORDS_LABEL"
            description="JFIELD_META_KEYWORDS_DESC"
            rows="3"
            cols="30"
            />

        <field
            name="metadesc"
            type="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            description="JFIELD_META_DESCRIPTION_DESC"
            rows="3"
            cols="30"
            />
    </fieldset>
</form>

<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="basic" label="COM_YOUTUBEVIDEOS_CONFIG_BASIC_LABEL" description="COM_YOUTUBEVIDEOS_CONFIG_BASIC_DESC">
        
        <field name="api_key"
               type="text"
               label="COM_YOUTUBEVIDEOS_API_KEY_LABEL"
               description="COM_YOUTUBEVIDEOS_API_KEY_DESC"
               size="50"
        />
        
        <field name="channel_id"
               type="text"
               label="COM_YOUTUBEVIDEOS_CHANNEL_ID_LABEL"
               description="COM_YOUTUBEVIDEOS_CHANNEL_ID_DESC"
               size="50"
        />
        
        <field name="playlist_id"
               type="text"
               label="COM_YOUTUBEVIDEOS_PLAYLIST_ID_LABEL"
               description="COM_YOUTUBEVIDEOS_PLAYLIST_ID_DESC"
               size="50"
        />
    </fieldset>

    <fieldset name="display" label="COM_YOUTUBEVIDEOS_DISPLAY_SETTINGS">
        <field name="videos_per_page"
               type="number"
               default="12"
               label="COM_YOUTUBEVIDEOS_VIDEOS_PER_PAGE_LABEL"
               description="COM_YOUTUBEVIDEOS_VIDEOS_PER_PAGE_DESC"
        />
        
        <field name="grid_columns"
               type="list"
               default="3"
               label="COM_YOUTUBEVIDEOS_GRID_COLUMNS_LABEL"
               description="COM_YOUTUBEVIDEOS_GRID_COLUMNS_DESC">
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </field>
        
        <field name="show_description"
               type="radio"
               default="1"
               label="COM_YOUTUBEVIDEOS_SHOW_DESCRIPTION_LABEL"
               description="COM_YOUTUBEVIDEOS_SHOW_DESCRIPTION_DESC"
               layout="joomla.form.field.radio.switcher">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field name="show_published_date"
               type="radio"
               default="1"
               label="COM_YOUTUBEVIDEOS_SHOW_PUBLISHED_DATE_LABEL"
               description="COM_YOUTUBEVIDEOS_SHOW_PUBLISHED_DATE_DESC"
               layout="joomla.form.field.radio.switcher">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field name="show_view_count"
               type="radio"
               default="1"
               label="COM_YOUTUBEVIDEOS_SHOW_VIEW_COUNT_LABEL"
               description="COM_YOUTUBEVIDEOS_SHOW_VIEW_COUNT_DESC"
               layout="joomla.form.field.radio.switcher">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset name="cache" label="COM_YOUTUBEVIDEOS_CACHE_SETTINGS">
        <field name="enable_cache"
               type="radio"
               default="1"
               label="COM_YOUTUBEVIDEOS_ENABLE_CACHE_LABEL"
               description="COM_YOUTUBEVIDEOS_ENABLE_CACHE_DESC"
               layout="joomla.form.field.radio.switcher">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field name="cache_time"
               type="number"
               default="60"
               label="COM_YOUTUBEVIDEOS_CACHE_TIME_LABEL"
               description="COM_YOUTUBEVIDEOS_CACHE_TIME_DESC"
        />
    </fieldset>

    <fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
        <field name="rules"
               type="rules"
               label="JCONFIG_PERMISSIONS_LABEL"
               validate="rules"
               filter="rules"
               component="com_youtubevideos"
               section="component"
        />
    </fieldset>
</config> 
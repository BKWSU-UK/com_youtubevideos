<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_YOUTUBEVIDEOS_CATEGORY_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_YOUTUBEVIDEOS_CATEGORY_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>
    
    <fields name="request">
        <fieldset name="request">
            <field
                name="id"
                type="sql"
                label="COM_YOUTUBEVIDEOS_FIELD_CATEGORY_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_CATEGORY_DESC"
                query="SELECT id AS value, title AS text FROM #__youtubevideos_categories WHERE published = 1 ORDER BY title"
                key_field="value"
                value_field="text"
                required="true"
                >
                <option value="">COM_YOUTUBEVIDEOS_FIELD_SELECT_CATEGORY</option>
            </field>
        </fieldset>
    </fields>

    <fields name="params">
        <fieldset name="basic" label="COM_YOUTUBEVIDEOS_FIELDSET_DISPLAY_OPTIONS">
            <field
                name="show_category_title"
                type="radio"
                label="COM_YOUTUBEVIDEOS_FIELD_SHOW_CATEGORY_TITLE_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_SHOW_CATEGORY_TITLE_DESC"
                layout="joomla.form.field.radio.switcher"
                default="1"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="show_description"
                type="radio"
                label="COM_YOUTUBEVIDEOS_FIELD_SHOW_DESC_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_SHOW_DESC_DESC"
                layout="joomla.form.field.radio.switcher"
                default="1"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="show_search_bar"
                type="radio"
                label="COM_YOUTUBEVIDEOS_FIELD_SHOW_SEARCH_BAR_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_SHOW_SEARCH_BAR_DESC"
                layout="joomla.form.field.radio.switcher"
                default="1"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="videos_per_row"
                type="list"
                label="COM_YOUTUBEVIDEOS_FIELD_VIDEOS_PER_ROW_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_VIDEOS_PER_ROW_DESC"
                default="3"
                >
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="6">6</option>
            </field>

            <field
                name="videos_per_page"
                type="list"
                label="COM_YOUTUBEVIDEOS_FIELD_VIDEOS_PER_PAGE_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_VIDEOS_PER_PAGE_DESC"
                default="12"
                >
                <option value="6">6</option>
                <option value="12">12</option>
                <option value="24">24</option>
                <option value="48">48</option>
            </field>
        </fieldset>
    </fields>
</metadata> 
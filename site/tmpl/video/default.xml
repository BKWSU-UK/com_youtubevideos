                name="id"
                type="sql"
                label="COM_YOUTUBEVIDEOS_FIELD_VIDEO_LABEL"
                description="COM_YOUTUBEVIDEOS_FIELD_VIDEO_DESC"
                query="SELECT id AS value, title AS text FROM #__youtubevideos_featured WHERE published = 1 ORDER BY title"
